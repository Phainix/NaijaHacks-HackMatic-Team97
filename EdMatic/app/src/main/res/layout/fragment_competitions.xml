<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_light_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/competition_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/title_competitions"
        android:fontFamily="@font/rubik_medium"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/spacing_avg"/>

    <ListView
        android:id="@+id/competition_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/spacer_medium"
        android:paddingStart="30dp"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/competition_title"
        tools:context="com.hackmatic.edmatic.ui.competitions.CompetitionsFragment"
        tools:listitem="@layout/activity_list_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>