<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:padding="20dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/team_list_item"
    >

    <TextView
        android:id="@+id/team_member_count"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/team_member_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/round_blue_bg"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:fontFamily="@font/rubik_medium"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math Rockers"
        app:layout_constraintStart_toEndOf="@+id/team_member_count"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/rubik_medium"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagos, Bentley High"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>