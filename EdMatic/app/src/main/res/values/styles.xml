<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="editTextColor">#8193AE</item>
    </style>

    <style name="SplashTextTheme">
        <item name="android:textColor">#E2E9F5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DarkMediumText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="ButtonRounded">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:capitalize">none</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="AuthButton" parent="ButtonRounded">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="DefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/default_button</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="DefaultButtonSm" parent="DefaultButton">
        <item name="android:paddingStart">@dimen/spacing_x_small</item>
        <item name="android:paddingEnd">@dimen/spacing_x_small</item>
    </style>

    <style name="Input">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/input_white</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="editTextColor">#8193AE</item>
        <item name="android:textColorHint">#8193AE</item>
    </style>

    <style name="InputRounded" parent="Input">
        <item name="android:background">@drawable/input_white_round</item>
    </style>

    <style name="Success">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">#56CB8F</item>
        <item name="android:background">#E0F5EB</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_x_small</item>
        <item name="android:paddingBottom">@dimen/spacing_x_small</item>
    </style>

    <style name="AccountButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/spacing_avg</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
